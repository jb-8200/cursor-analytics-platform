# ============================================================================
# Cursor Analytics Platform - Environment Variables
# ============================================================================
# Copy this file to .env and customize for your environment
# DO NOT commit .env to version control
# ============================================================================

# ----------------------------------------------------------------------------
# cursor-sim (Simulator Service)
# ----------------------------------------------------------------------------
CURSOR_SIM_PORT=8080
CURSOR_SIM_DEVELOPERS=50
CURSOR_SIM_VELOCITY=high
CURSOR_SIM_FLUCTUATION=0.2

# Simulated API credentials (for testing auth middleware)
CURSOR_SIM_API_KEY=cursor_sim_key_abc123
CURSOR_SIM_API_SECRET=cursor_sim_secret_xyz789

# Break condition: pr_count, time_limit, or infinite
CURSOR_SIM_BREAK_TYPE=pr_count
CURSOR_SIM_BREAK_VALUE=100000

# ----------------------------------------------------------------------------
# cursor-analytics-core (Aggregator Service)
# ----------------------------------------------------------------------------
GRAPHQL_PORT=4000

# PostgreSQL Database
DATABASE_URL=postgresql://cursor_user:cursor_pass@postgres:5432/cursor_analytics
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=cursor_analytics
DATABASE_USER=cursor_user
DATABASE_PASSWORD=cursor_pass

# Simulator connection
SIMULATOR_URL=http://cursor-sim:8080

# Data ingestion settings
POLL_INTERVAL_MS=60000
INGESTION_BATCH_SIZE=1000

# ----------------------------------------------------------------------------
# cursor-viz-spa (Frontend Dashboard)
# ----------------------------------------------------------------------------
VITE_GRAPHQL_URL=http://localhost:4000/graphql
VITE_API_URL=http://localhost:8080

# ----------------------------------------------------------------------------
# PostgreSQL (Database)
# ----------------------------------------------------------------------------
POSTGRES_USER=cursor_user
POSTGRES_PASSWORD=cursor_pass
POSTGRES_DB=cursor_analytics

# ----------------------------------------------------------------------------
# Development Settings
# ----------------------------------------------------------------------------
NODE_ENV=development
LOG_LEVEL=info

# ----------------------------------------------------------------------------
# Production Settings (uncomment for production)
# ----------------------------------------------------------------------------
# NODE_ENV=production
# LOG_LEVEL=warn
# VITE_GRAPHQL_URL=https://api.yourdomain.com/graphql
# VITE_API_URL=https://api.yourdomain.com
